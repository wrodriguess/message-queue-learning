<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Task" table="tasks">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="uuid" column="uuid" nullable="false"/>

        <many-to-one field="user" target-entity="App\Entity\User">
            <join-column name="user_id" referenced-column-name="id" nullable="false" on-delete="SET NULL"/>
        </many-to-one>

        <field name="title" column="title" nullable="false"/>
        <field name="description" column="description" />

        <many-to-one field="status" target-entity="App\Entity\Status">
            <join-column name="status_id" referenced-column-name="id" nullable="false" on-delete="SET NULL"/>
        </many-to-one>

        <field name="dueDate" type="datetime_immutable" column="due_date"/>
        <field name="priority" column="priority" nullable="false"/>

        <many-to-one field="category" target-entity="App\Entity\Category">
            <join-column name="category_id" referenced-column-name="id" nullable="false" on-delete="SET NULL"/>
        </many-to-one>

        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="false"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at"/>
        <field name="deletedAt" type="datetime_immutable" column="deleted_at"/>
    </entity>
</doctrine-mapping>